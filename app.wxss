/* 全局样式 */
page {
  margin: 0;
  padding: 0;
  box-sizing: border-box;

  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: 14px;
  color: #333333;
  background-color: #f5f5f5;
  line-height: 1.5;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* 通用样式类 */
.container {
  padding: 20rpx;
  min-height: 100vh;
}

.content {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #292f36;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #6c757d;
  margin-bottom: 15rpx;
}

/* 按钮样式 */
.btn {
  display: inline-block;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  text-align: center;
  border-radius: 8rpx;
  cursor: pointer;
  transition: all 0.3s;
  border: none;
}

.btn-primary {
  background-color: #4ecdc4;
  color: #ffffff;
}

.btn-primary:active {
  background-color: #45b7aa;
}

.btn-secondary {
  background-color: #ffffff;
  color: #4ecdc4;
  border: 1rpx solid #4ecdc4;
}

.btn-secondary:active {
  background-color: #f8f9fa;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s, box-shadow 0.2s;
}

.card:active {
  transform: scale(0.98);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #292f36;
  margin-bottom: 10rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #6c757d;
  line-height: 1.6;
}

/* 列表样式 */
.list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.list-item:last-child {
  border-bottom: none;
}

/* 输入框样式 */
.input {
  width: 100%;
  padding: 20rpx;
  font-size: 28rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  background-color: #ffffff;
}

.input:focus {
  outline: none;
  border-color: #4ecdc4;
}

/* 图标样式 */
.icon {
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 80rpx;
  color: #999999;
}

/* 错误状态 */
.error {
  padding: 20rpx;
  background-color: #ffebee;
  color: #c62828;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

/* 成功状态 */
.success {
  padding: 20rpx;
  background-color: #e8f5e9;
  color: #2e7d32;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

/* 响应式布局 */
@media screen and (min-width: 768px) {
  .container {
    max-width: 750px;
    margin: 0 auto;
  }
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in {
  animation: fadeIn 0.3s ease-out;
}