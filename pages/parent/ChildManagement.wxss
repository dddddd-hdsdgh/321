/* pages/parent/ChildManagement.wxss */

/* 全局样式 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 头部导航栏 */
.header {
  height: 100rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.back-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-button image {
  width: 40rpx;
  height: 40rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.header-right {
  width: 60rpx;
}

/* 主要内容区域 */
.content {
  padding: 120rpx 32rpx 40rpx;
}

/* 添加按钮 */
.add-button {
  background: linear-gradient(135deg, #4ecdc4, #44a08d);
  color: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 12px rgba(78, 205, 196, 0.4);
}

.add-icon {
  font-size: 60rpx;
  margin-right: 20rpx;
  font-weight: bold;
}

.add-text {
  font-size: 32rpx;
  font-weight: bold;
}

.add-button:active {
  opacity: 0.9;
  transform: translateY(2rpx);
}

/* 儿童列表 */
.children-list {
  background-color: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  padding: 32rpx 32rpx 0;
}

/* 儿童项 */
.child-item {
  padding: 32rpx;
  border-bottom: 1px solid #f0f0f0;
}

.child-item:last-child {
  border-bottom: none;
}

.child-info {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.child-avatar {
  width: 120rpx;
  height: 120rpx;
  background-color: #e8f5e9;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}

.child-details {
  flex: 1;
}

.child-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
}

.current-tag {
  font-size: 24rpx;
  color: #4ecdc4;
  background-color: #e8f5e9;
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
  margin-left: 16rpx;
  font-weight: normal;
}

.child-meta {
  font-size: 28rpx;
  color: #666666;
}

/* 操作按钮 */
.child-actions {
  display: flex;
  gap: 20rpx;
}

.action-button {
  font-size: 28rpx;
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
}

.edit-btn {
  background-color: #e6f7ff;
  color: #1890ff;
}

.delete-btn {
  background-color: #fff1f0;
  color: #ff4d4f;
}

.set-btn {
  background-color: #f6ffed;
  color: #52c41a;
}

.action-button:active {
  opacity: 0.8;
}

/* 弹窗遮罩 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 弹窗内容 */
.modal-content {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background-color: white;
  border-radius: 24rpx;
  z-index: 1000;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.16);
  max-height: 80vh;
  overflow-y: auto;
}

.small-modal {
  width: 70%;
}

/* 弹窗头部 */
.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1px solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.modal-close {
  font-size: 48rpx;
  color: #999999;
  padding: 0 16rpx;
}

.modal-close:active {
  color: #666666;
}

/* 弹窗主体 */
.modal-body {
  padding: 32rpx;
}

.confirm-text {
  font-size: 32rpx;
  color: #333333;
  text-align: center;
  line-height: 1.6;
}

/* 表单样式 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 16rpx;
  display: block;
}

.form-input {
  width: 100%;
  height: 96rpx;
  border: 1px solid #d9d9d9;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.picker {
  width: 100%;
  height: 96rpx;
  border: 1px solid #d9d9d9;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #333333;
}

.picker-arrow {
  color: #999999;
  font-size: 24rpx;
}

/* 头像选择 */
.avatar-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.avatar-option {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  background-color: #f5f5f5;
  border: 2px solid transparent;
}

.avatar-option.selected {
  border-color: #4ecdc4;
  background-color: #e8f5e9;
}

/* 弹窗底部 */
.modal-footer {
  display: flex;
  padding: 32rpx;
  border-top: 1px solid #f0f0f0;
}

.modal-button {
  flex: 1;
  height: 96rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  margin: 0 16rpx;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666666;
}

.confirm-btn {
  background: linear-gradient(135deg, #4ecdc4, #44a08d);
  color: white;
}

.delete-confirm-btn {
  background-color: #ff4d4f;
  color: white;
}

.modal-button:active {
  opacity: 0.8;
}