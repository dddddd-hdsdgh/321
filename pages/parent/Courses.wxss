/* pages/parent/Courses.wxss */

/* 基础样式 */
page {
  background-color: #f5f5f5;
  font-size: 16rpx;
}

/* 容器样式 */
.courses-container {
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 头部导航栏 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  background-color: #fff;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.back-button {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-button image {
  width: 48rpx;
  height: 48rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.search-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-icon image {
  width: 40rpx;
  height: 40rpx;
}

/* 儿童选择器 */
.child-selector {
  margin-top: 108rpx;
  padding: 0 30rpx 30rpx;
  background-color: #fff;
}

.selector-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.children-scroll {
  display: flex;
}

.child-item {
  margin-right: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.child-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 3rpx solid transparent;
  margin-bottom: 10rpx;
}

.child-item.active .child-avatar {
  border-color: #ff9966;
}

.child-avatar image {
  width: 100%;
  height: 100%;
}

.child-name {
  font-size: 28rpx;
  color: #666;
}

.child-item.active .child-name {
  color: #ff9966;
  font-weight: 500;
}

/* 筛选区域 */
.filter-section {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 0 30rpx;
}

.filter-tabs {
  display: flex;
  height: 90rpx;
  align-items: center;
  border-bottom: 2rpx solid #f0f0f0;
}

.filter-tab {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: #666;
  position: relative;
  padding-bottom: 10rpx;
}

.filter-tab.active {
  color: #ff9966;
  font-weight: 500;
}

.filter-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #ff9966;
  border-radius: 3rpx;
}

/* 课程列表 */
.courses-list {
  padding: 30rpx;
}

.course-item {
  margin-bottom: 30rpx;
}

.course-card {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s;
}

.course-item:active .course-card {
  transform: scale(0.98);
}

/* 课程封面 */
.course-cover {
  position: relative;
  height: 200rpx;
}

.course-cover image {
  width: 100%;
  height: 100%;
}

.course-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 8rpx 20rpx;
  background-color: rgba(255, 153, 102, 0.9);
  color: #fff;
  font-size: 24rpx;
  border-radius: 16rpx;
}

/* 课程信息 */
.course-info {
  padding: 24rpx;
}

.course-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.course-meta {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.course-grade,
.course-lessons {
  font-size: 26rpx;
  color: #999;
}

/* 进度条 */
.course-progress {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.progress-bar {
  flex: 1;
  height: 12rpx;
  background-color: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #ff9966, #ff6b6b);
  border-radius: 6rpx;
  transition: width 0.3s;
}

.progress-text {
  font-size: 28rpx;
  color: #ff9966;
  font-weight: 500;
  min-width: 70rpx;
  text-align: right;
}

/* 学习时长 */
.course-duration {
  display: flex;
  align-items: center;
}

.duration-label {
  font-size: 26rpx;
  color: #999;
  margin-right: 8rpx;
}

.duration-value {
  font-size: 26rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 30rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-button {
  background-color: #ff9966;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 80rpx;
  border-radius: 40rpx;
  border: none;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.action-button {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin: 0 10rpx;
  border: none;
}

.action-button image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.action-button.recommend {
  background-color: #ff9966;
  color: #fff;
}

.action-button.download {
  background-color: #e6f7ff;
  color: #1890ff;
}

/* 响应式调整 */
@media screen and (min-width: 768px) {
  .courses-list {
    max-width: 600rpx;
    margin-left: auto;
    margin-right: auto;
  }
  
  .action-buttons {
    max-width: 600rpx;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 20rpx 20rpx 0 0;
  }
}