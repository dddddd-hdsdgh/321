/* pages/parent/Statistics.wxss */

/* 整体容器 */
.statistics-container {
  background-color: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 30px;
}

/* 头部导航栏 */
.header {
  background: linear-gradient(135deg, #ff9966, #ff5e62);
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 16px;
  color: white;
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-button {
  width: 30px;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-button image {
  width: 20px;
  height: 20px;
  filter: brightness(0) invert(1);
}

.header-title {
  font-size: 18px;
  font-weight: bold;
}

.header-right {
  width: 30px;
}

/* 儿童选择器 */
.child-selector {
  background: white;
  margin: 16px;
  padding: 16px;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.selector-title {
  font-size: 14px;
  color: #666;
  margin-bottom: 12px;
}

.picker-selected {
  height: 40px;
  background-color: #f5f5f5;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 16px;
  font-size: 16px;
  color: #333;
}

.picker-selected::after {
  content: '▼';
  font-size: 12px;
  color: #999;
}

/* 数据概览卡片 */
.overview-card {
  background: white;
  margin: 0 16px 16px;
  padding: 16px;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.overview-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 16px;
}

.overview-stats {
  display: flex;
  justify-content: space-between;
}

.overview-item {
  flex: 1;
  text-align: center;
  padding: 0 8px;
}

.overview-value {
  font-size: 24px;
  font-weight: bold;
  color: #ff9966;
  margin-bottom: 4px;
}

.overview-label {
  font-size: 12px;
  color: #666;
}

/* 图表卡片 */
.chart-card {
  background: white;
  margin: 0 16px 16px;
  padding: 16px;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16px;
}

.chart-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.chart-legend {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.legend-item {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #666;
}

.legend-color {
  width: 8px;
  height: 8px;
  border-radius: 2px;
  margin-right: 6px;
}

.time-color {
  background-color: #ff9966;
}

.courses-color {
  background-color: #4CAF50;
}

.chart-container {
  height: 200px;
  display: flex;
  align-items: flex-end;
  justify-content: space-around;
  padding: 0 10px 20px;
  position: relative;
}

.chart-container::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1px;
  background-color: #f0f0f0;
}

.chart-bars {
  display: flex;
  width: 100%;
  justify-content: space-around;
  align-items: flex-end;
}

.bar-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20px;
}

.bar-time {
  width: 8px;
  background-color: #ff9966;
  border-radius: 4px 4px 0 0;
  margin-bottom: 2px;
  transition: height 0.3s ease;
}

.bar-courses {
  width: 8px;
  background-color: #4CAF50;
  border-radius: 4px 4px 0 0;
  margin-bottom: 8px;
  transition: height 0.3s ease;
}

.bar-label {
  font-size: 10px;
  color: #666;
}

/* 分析区域 */
.analysis-section {
  margin: 0 16px 16px;
}

.section-header {
  margin-bottom: 12px;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 4px;
}

.section-subtitle {
  font-size: 12px;
  color: #999;
}

.analysis-card {
  background: white;
  margin-bottom: 12px;
  padding: 16px;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.card-title {
  font-size: 14px;
  font-weight: bold;
  color: #333;
  margin-bottom: 12px;
}

/* 时间分布 */
.time-distribution {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.distribution-item {
  display: flex;
  align-items: center;
  gap: 12px;
}

.distribution-label {
  width: 70px;
  font-size: 13px;
  color: #666;
  text-align: right;
}

.distribution-bar {
  flex: 1;
  height: 24px;
  background-color: #f0f0f0;
  border-radius: 12px;
  overflow: hidden;
  position: relative;
}

.distribution-fill {
  height: 100%;
  background: linear-gradient(90deg, #ff9966, #ff5e62);
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 12px;
  color: white;
  font-size: 12px;
  font-weight: bold;
}

/* 成就列表 */
.achievements-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12px;
}

.achievement-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12px;
  background-color: #f9f9f9;
  border-radius: 10px;
}

.achievement-icon {
  width: 60px;
  height: 60px;
  border-radius: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8px;
}

.achievement-icon.achieved {
  background: linear-gradient(135deg, #4CAF50, #8BC34A);
}

.achievement-icon.locked {
  background-color: #e0e0e0;
}

.achievement-icon image {
  width: 36px;
  height: 36px;
}

.achievement-icon.achieved image {
  filter: brightness(0) invert(1);
}

.achievement-name {
  font-size: 13px;
  font-weight: bold;
  color: #333;
  margin-bottom: 4px;
  text-align: center;
}

.achievement-desc {
  font-size: 11px;
  color: #666;
  text-align: center;
}

/* 学习建议 */
.suggestions-card {
  background: white;
  margin: 0 16px 16px;
  padding: 16px;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  gap: 12px;
  margin-bottom: 12px;
}

.suggestion-item:last-child {
  margin-bottom: 0;
}

.suggestion-icon {
  width: 24px;
  height: 24px;
  background-color: #ff9966;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 2px;
}

.suggestion-icon image {
  width: 16px;
  height: 16px;
  filter: brightness(0) invert(1);
}

.suggestion-text {
  flex: 1;
  font-size: 13px;
  color: #333;
  line-height: 1.5;
}

/* 底部间距 */
.bottom-space {
  height: 20px;
}

/* 响应式调整 */
@media (max-width: 320px) {
  .achievements-grid {
    grid-template-columns: 1fr;
  }
  
  .overview-value {
    font-size: 20px;
  }
}