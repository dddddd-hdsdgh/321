<!-- pages/parent/Settings.wxml -->
<view class="settings-container">
  <!-- 头部导航栏 -->
  <view class="header">
    <view class="back-button" bindtap="navigateBack">
      <image src="/assets/icons/back.png" mode="aspectFit"></image>
    </view>
    <view class="header-title">家长设置</view>
    <view class="header-right"></view>
  </view>

  <!-- 设置菜单 -->
  <view class="settings-menu">
    <!-- 儿童管理 -->
    <view class="menu-section">
      <view class="section-title">儿童管理</view>
      <view class="menu-card">
        <view class="menu-item" bindtap="goToChildManagement">
          <view class="menu-left">
            <view class="menu-icon child-icon">
              <image src="/assets/icons/children.png" mode="aspectFit"></image>
            </view>
            <view class="menu-text">管理孩子</view>
          </view>
          <view class="menu-arrow"></view>
        </view>
        
        <view class="menu-item" bindtap="goToStudyTimeSetting">
          <view class="menu-left">
            <view class="menu-icon time-icon">⏰</view>
            <view class="menu-text">学习时间管理</view>
          </view>
          <view class="menu-arrow"></view>
        </view>
        
        <view class="menu-item" bindtap="goToContentFilter">
          <view class="menu-left">
            <view class="menu-icon filter-icon">🔍</view>
            <view class="menu-text">内容过滤</view>
          </view>
          <view class="menu-arrow"></view>
        </view>
      </view>
    </view>

    <!-- 学习设置 -->
    <view class="menu-section">
      <view class="section-title">学习设置</view>
      <view class="menu-card">
        <view class="menu-item" bindtap="goToDifficultySetting">
          <view class="menu-left">
            <view class="menu-icon difficulty-icon">🎮</view>
            <view class="menu-text">学习难度</view>
          </view>
          <view class="menu-arrow"></view>
        </view>
        
        <view class="menu-item" bindtap="goToLearningPlan">
          <view class="menu-left">
            <view class="menu-icon plan-icon">📅</view>
            <view class="menu-text">学习计划</view>
          </view>
          <view class="menu-arrow"></view>
        </view>
        
        <view class="menu-item" bindtap="toggleNotification">
          <view class="menu-left">
            <view class="menu-icon notification-icon">🔔</view>
            <view class="menu-text">学习提醒</view>
          </view>
          <switch checked="{{notificationsEnabled}}" color="#ff9966" />
        </view>
      </view>
    </view>

    <!-- 账号设置 -->
    <view class="menu-section">
      <view class="section-title">账号设置</view>
      <view class="menu-card">
        <view class="menu-item" bindtap="goToProfile">
          <view class="menu-left">
            <view class="menu-icon profile-icon">👤</view>
            <view class="menu-text">个人信息</view>
          </view>
          <view class="menu-arrow"></view>
        </view>
        
        <view class="menu-item" bindtap="goToChangePassword">
          <view class="menu-left">
            <view class="menu-icon password-icon">🔒</view>
            <view class="menu-text">修改密码</view>
          </view>
          <view class="menu-arrow"></view>
        </view>
        
        <view class="menu-item" bindtap="toggleFingerprint">
          <view class="menu-left">
            <view class="menu-icon fingerprint-icon">🖋️</view>
            <view class="menu-text">指纹登录</view>
          </view>
          <switch checked="{{fingerprintEnabled}}" color="#ff9966" />
        </view>
      </view>
    </view>

    <!-- 关于与帮助 -->
    <view class="menu-section">
      <view class="section-title">关于与帮助</view>
      <view class="menu-card">
        <view class="menu-item" bindtap="goToAbout">
          <view class="menu-left">
            <view class="menu-icon about-icon">ℹ️</view>
            <view class="menu-text">关于我们</view>
          </view>
          <view class="menu-arrow"></view>
        </view>
        
        <view class="menu-item" bindtap="goToHelp">
          <view class="menu-left">
            <view class="menu-icon help-icon">❓</view>
            <view class="menu-text">帮助中心</view>
          </view>
          <view class="menu-arrow"></view>
        </view>
        
        <view class="menu-item" bindtap="goToFeedback">
          <view class="menu-left">
            <view class="menu-icon feedback-icon">💬</view>
            <view class="menu-text">意见反馈</view>
          </view>
          <view class="menu-arrow"></view>
        </view>
      </view>
    </view>
  </view>

  <!-- 退出登录按钮 -->
  <view class="logout-section">
    <button class="logout-button" bindtap="handleLogout">退出登录</button>
  </view>

  <!-- 版本信息 -->
  <view class="version-info">
    <text>版本 1.0.0</text>
  </view>
</view>