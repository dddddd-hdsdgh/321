/* pages/child/Home.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-section {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  color: #ffffff;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #ffffff;
  overflow: hidden;
  margin-right: 20rpx;
}

.user-avatar .avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
}

.course-cover-placeholder {
  width: 200rpx;
  height: 140rpx;
  border-radius: 12rpx;
  background-color: #e9ecef;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
}

.icon-placeholder {
  font-size: 60rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.achievement-icon-placeholder {
  font-size: 48rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.welcome-text {
  font-size: 24rpx;
  opacity: 0.9;
}

.badge {
  background-color: rgba(255, 255, 255, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
}

.badge-text {
  font-size: 24rpx;
  font-weight: bold;
}

/* 通用区域样式 */
.section {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title-with-icon {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.section-icon {
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #292f36;
}

.section-more {
  display: flex;
  align-items: center;
  color: #4ecdc4;
}

.section-more text {
  font-size: 24rpx;
}

.more-arrow {
  margin-left: 8rpx;
  font-size: 28rpx;
}

/* 推荐列表样式 */
.recommend-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.recommend-item {
  display: flex;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 15rpx;
  transition: transform 0.2s;
}

.recommend-item:active {
  transform: scale(0.98);
}

.course-cover {
  width: 200rpx;
  height: 140rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.course-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.course-title {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
}

.course-description {
  font-size: 22rpx;
  color: #6c757d;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.3;
}

.course-meta {
  display: flex;
  align-items: center;
  font-size: 20rpx;
  color: #6c757d;
}

.course-duration {
  margin-right: 15rpx;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background-color: #e9ecef;
  border-radius: 4rpx;
  margin-right: 15rpx;
  position: relative;
  overflow: hidden;
}

.progress-fill {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  background-color: #4ecdc4;
  border-radius: 4rpx;
}

.progress-text {
  min-width: 60rpx;
  text-align: right;
}

/* 功能网格样式 */
.feature-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

/* 为不同功能模块设置不同的图标背景色 */
.feature-item:nth-child(1) .feature-icon {
  background-color: #fff0e6;
}

.feature-item:nth-child(2) .feature-icon {
  background-color: #f0f8ff;
}

.feature-item:nth-child(3) .feature-icon {
  background-color: #e6f7ff;
}

.feature-item:nth-child(4) .feature-icon {
  background-color: #f6ffed;
}

.feature-item {
  background-color: #ffffff;
  padding: 30rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  transition: transform 0.2s, box-shadow 0.2s;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.feature-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.feature-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f0f8ff;
  border-radius: 20rpx;
  transition: background-color 0.2s;
}

.feature-item:active .feature-icon {
  background-color: #e6f1ff;
}

.feature-icon-img {
  width: 70rpx;
  height: 70rpx;
  object-fit: contain;
}

.feature-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #292f36;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.feature-desc {
  font-size: 20rpx;
  color: #6c757d;
  line-height: 1.4;
  padding: 0 10rpx;
}

/* 成就列表样式 */
.achievement-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.achievement-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 15rpx;
  transition: transform 0.2s;
}

.achievement-item:active {
  transform: scale(0.98);
}

.achievement-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.achievement-icon-img {
  width: 80rpx;
  height: 80rpx;
  object-fit: contain;
}

.achievement-info {
  flex: 1;
}

.achievement-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #292f36;
  margin-bottom: 5rpx;
}

.achievement-desc {
  font-size: 20rpx;
  color: #6c757d;
  margin-bottom: 3rpx;
}

.achievement-date {
  font-size: 18rpx;
  color: #adb5bd;
}

.achievement-status {
  min-width: 100rpx;
  text-align: right;
}

.status-text {
  font-size: 22rpx;
  color: #4ecdc4;
  font-weight: 500;
}

/* 提醒样式 */
.reminder {
  background-color: #fff3cd;
  padding: 20rpx;
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.reminder-text {
  font-size: 22rpx;
  color: #856404;
  text-align: center;
}

/* 响应式设计 */
@media screen and (min-width: 768px) {
  .container {
    max-width: 750rpx;
    margin: 0 auto;
  }
  
  .feature-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
  height: 200rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #6c757d;
}

/* 错误提示样式 */
.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
  height: 200rpx;
}

.error-text {
  font-size: 28rpx;
  color: #dc3545;
  margin-bottom: 20rpx;
  text-align: center;
}

.retry-btn {
  margin-top: 20rpx;
  background-color: #4ecdc4;
  color: white;
  font-size: 24rpx;
  padding: 10rpx 40rpx;
  border-radius: 30rpx;
  border: none;
}

.retry-btn::after {
  border: none;
  border-radius: 30rpx;
}

/* 无数据状态样式 */
.empty-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
  height: 200rpx;
}

.empty-image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #6c757d;
  text-align: center;
}

/* 图标占位符样式优化 */
.icon-placeholder,
.achievement-icon-placeholder {
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon-placeholder {
  font-size: 60rpx;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f0f8ff;
  border-radius: 20rpx;
}

.achievement-icon-placeholder {
  font-size: 48rpx;
  width: 80rpx;
  height: 80rpx;
}