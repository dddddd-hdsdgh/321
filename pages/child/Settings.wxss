/* pages/child/Settings.wxss */
.settings-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-info-section {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.user-avatar {
  margin-right: 30rpx;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #4ecdc4;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.user-type {
  font-size: 28rpx;
  color: #666666;
}

/* 设置区域通用样式 */
.settings-section {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

/* 设置项样式 */
.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  display: flex;
  align-items: center;
}

.setting-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 48rpx;
  text-align: center;
}

.setting-label text {
  font-size: 32rpx;
  color: #333333;
}

/* 难度设置样式 */
.difficulty-options {
  display: flex;
  gap: 20rpx;
  padding: 10rpx;
}

.difficulty-option {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 32rpx;
  color: #666666;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
}

.difficulty-option.active {
  background-color: #4ecdc4;
  color: #ffffff;
  border-color: #4ecdc4;
}

/* 操作项样式 */
.action-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.action-item:last-child {
  border-bottom: none;
}

.action-label {
  display: flex;
  align-items: center;
}

.action-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 48rpx;
  text-align: center;
}

.action-label text {
  font-size: 32rpx;
  color: #333333;
}

.action-arrow {
  font-size: 40rpx;
  color: #999999;
}

/* 版本信息 */
.version-info {
  text-align: center;
  font-size: 28rpx;
  color: #999999;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}